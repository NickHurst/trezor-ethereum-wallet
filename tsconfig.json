{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "importHelpers": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "moduleResolution": "node",
    "lib":[
      "dom",
      "es5",
      "es2015",
      "es2015.promise"
    ],
    "baseUrl": ".",
    "paths": {
      "utils/*": ["./src/renderer/utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}